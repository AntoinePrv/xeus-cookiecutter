# xeus-mylang cmake module
# This module sets the following variables in your project::
#
#   xeus-mylang_FOUND - true if xeus-mylang was found on the system
#   xeus-mylang_INCLUDE_DIRS - the directory containing xeus-mylang headers
#   xeus-mylang_LIBRARY - the library for dynamic linking
#   xeus-mylang_STATIC_LIBRARY - the library for static linking

@PACKAGE_INIT@

set(CMAKE_MODULE_PATH "${CMAKE_CURRENT_LIST_DIR};${CMAKE_MODULE_PATH}")

@XEUS_CONFIG_CODE@

include(CMakeFindDependencyMacro)
find_dependency(xtl @xtl_REQUIRED_VERSION@)
find_dependency(xeus @xeus_REQUIRED_VERSION@)
find_dependency(cppzmq @cppzmq_REQUIRED_VERSION@)


if (NOT TARGET xeus-mylang AND NOT TARGET xeus-mylang-static)
    include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")

    if (TARGET xeus-mylang AND TARGET xeus-mylang-static)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-mylang INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_LIBRARY xeus-mylang LOCATION)
        get_target_property(@PROJECT_NAME@_STATIC_LIBRARY xeus-mylang-static LOCATION)
    elseif (TARGET xeus-mylang)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-mylang INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_LIBRARY xeus-mylang LOCATION)
    elseif (TARGET xeus-mylang-static)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-mylang-static INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_STATIC_LIBRARY xeus-mylang-static LOCATION)
        set(@PROJECT_NAME@_LIBRARY ${@PROJECT_NAME@_STATIC_LIBRARY})
    endif ()
endif ()
